{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2>
                	{{ title|upper }}
                </h2>
            </div>
            
            <div class="col-md-12 mt-3">
            	{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
            	{{ form_widget(form) }}
            	{{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}